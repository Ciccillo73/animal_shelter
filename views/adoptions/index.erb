<h1>Adoptions</h1>

<p class="btn--new">
  <a class="btn btn--action" href="/adoptions/new">New entry</a>
</p>

<ul>
  <% for adoption in @adoptions %>
  <li>
  <p><%= adoption.owner.name %>   </p>
    <p>
      <form action="/adoptions/<%= adoption.id %>/delete" method="POST">
        <input class="btn btn--" type="submit" value="delete" />
      </form>
    </p>
  </li>
  <% end %>
</ul>
